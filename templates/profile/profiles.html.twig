{% extends 'base.html.twig' %}

{% block title %}List of profiles{% endblock %}

{% block body %}
    <div class="count">
        counter: {{ pagination.getTotalItemCount }}
    </div>
    <table>
        <tr>
            {# sorting of properties based on query components #}
            <th>ID</th>
            <th>First name</th>
            <th>Last name</th>
            <th>Image</th>
        </tr>

        {# table body #}
        {% for user in pagination %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.firstName }}</td>
                <td>{{ user.lastName }}</td>
                <td>
                    {% set link = asset('uploads/' ~ user.filePath) %}
                    <a href="{{ link }}">
                        {{ link }}
                    </a>
                </td>
            </tr>
        {% endfor %}
    </table>
    <div class="navigation">
        {{ knp_pagination_render(pagination) }}
    </div>
{% endblock %}